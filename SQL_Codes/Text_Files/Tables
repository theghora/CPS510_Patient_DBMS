CREATE TABLE ASSIGNED_NURSE (
    EMPLOYEEID VARCHAR2(20) PRIMARY KEY,
    TYPEOFNURSE VARCHAR2(20),
    CONSTRAINT ASSIGNED_NURSE_FK1 FOREIGN KEY (EMPLOYEEID) REFERENCES STAFF(EMPLOYEEID)
);

CREATE TABLE COVERAGE_DETAILS (
    COVERAGETYPE VARCHAR2(35),
    COPAYAMOUNT NUMBER(10, 2),
    POLICYINCLUSIONSTATUS VARCHAR2(30),
    INSURANCENUMBER VARCHAR2(20),
    PRIMARY KEY (COVERAGETYPE, INSURANCENUMBER),
    CONSTRAINT COVERAGE_DETAILS_FK1 FOREIGN KEY (INSURANCENUMBER) REFERENCES INSURANCE(INSURANCENUMBER)
);

CREATE TABLE DOCTOR (
    EMPLOYEEID VARCHAR2(35) PRIMARY KEY,
    SPECIALTY VARCHAR2(35),
    CONSTRAINT DOCTOR_FK1 FOREIGN KEY (EMPLOYEEID) REFERENCES STAFF(EMPLOYEEID)
);

CREATE TABLE EMERGENCY_CONTACTS (
    NAME VARCHAR2(35),
    ADDRESS VARCHAR2(40),
    PHONENUMBER VARCHAR2(35),
    HEALTHCARDNUMBER VARCHAR2(15),
    PRIMARY KEY (NAME, HEALTHCARDNUMBER),
    CONSTRAINT EMERGENCY_CONTACTS_FK1 FOREIGN KEY (HEALTHCARDNUMBER) REFERENCES PATIENT(HEALTHCARDNUMBER)
);

CREATE TABLE HEALTH_RECORD (
    HEALTHRECORDID VARCHAR2(15) PRIMARY KEY,
    ORGANDONOR VARCHAR2(5),
    HEALTHCARDNUMBER VARCHAR2(15),
    VITALINFO VARCHAR2(29),
    IMMUNIZATIONRECORD VARCHAR2(35),
    CONSTRAINT HEALTH_RECORD_FK1 FOREIGN KEY (HEALTHCARDNUMBER) REFERENCES PATIENT(HEALTHCARDNUMBER)
);

CREATE TABLE HOSPITAL (
    HOSPITALID VARCHAR2(20) PRIMARY KEY,
    NAME VARCHAR2(24),
    CITY VARCHAR2(100),
    STREET VARCHAR2(35),
    POSTALCODE VARCHAR2(20)
);

CREATE TABLE INSURANCE (
    INSURANCENUMBER VARCHAR2(20) PRIMARY KEY,
    INSURANCEPROVIDER VARCHAR2(25),
    HEALTHCARDNUMBER VARCHAR2(15),
    CONSTRAINT INSURANCE_FK1 FOREIGN KEY (HEALTHCARDNUMBER) REFERENCES PATIENT(HEALTHCARDNUMBER)
);

CREATE TABLE MAINTENANCE (
    EMPLOYEEID VARCHAR2(25) PRIMARY KEY,
    WARDOFRESPONSIBILITY VARCHAR2(25),
    OCCUPATION VARCHAR2(20),
    CONSTRAINT MAINTENANCE_FK1 FOREIGN KEY (EMPLOYEEID) REFERENCES STAFF(EMPLOYEEID)
);

CREATE TABLE MEDICATIONS (
    MEDICATIONID VARCHAR2(25) PRIMARY KEY,
    DOSAGE VARCHAR2(20),
    BRAND VARCHAR2(100),
    SIDEEFFECTS VARCHAR2(20),
    HEALTHRECORDID VARCHAR2(20),
    CONSTRAINT MEDICATIONS_FK1 FOREIGN KEY (HEALTHRECORDID) REFERENCES HEALTH_RECORD(HEALTHRECORDID)
);

CREATE TABLE OPERATIONS (
    SURGERYID VARCHAR2(25) PRIMARY KEY,
    SURGERYNAME VARCHAR2(25),
    SURGEONNAME VARCHAR2(25),
    HEALTHRECORDID VARCHAR2(25),
    CONSTRAINT OPERATIONS_FK1 FOREIGN KEY (HEALTHRECORDID) REFERENCES HEALTH_RECORD(HEALTHRECORDID)
);

CREATE TABLE PATIENT (
    FIRSTNAME VARCHAR2(20),
    LASTNAME VARCHAR2(20),
    HEALTHCARDNUMBER VARCHAR2(15) PRIMARY KEY,
    GENDER VARCHAR2(6),
    DATEOFBIRTH DATE,
    HOSPITALID VARCHAR2(20),
    CONSTRAINT FK__HOSPITALID FOREIGN KEY (HOSPITALID) REFERENCES HOSPITAL(HOSPITALID)
);

CREATE TABLE STAFF (
    EMPLOYEEID VARCHAR2(20) PRIMARY KEY,
    DEPARTMENT VARCHAR2(20),
    HOSPITALID VARCHAR2(20),
    NAME VARCHAR2(20),
    CONSTRAINT STAFF_FK1 FOREIGN KEY (HOSPITALID) REFERENCES HOSPITAL(HOSPITALID)
);
